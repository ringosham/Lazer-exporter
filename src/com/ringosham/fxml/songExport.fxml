<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<FlowPane xmlns:fx="http://javafx.com/fxml/1" fx:id="pane" alignment="center" maxHeight="1.7976931348623157E308"
          maxWidth="1.7976931348623157E308" minWidth="400.0" prefHeight="221.0" prefWidth="432.0"
          xmlns="http://javafx.com/javafx/8.0.121" fx:controller="com.ringosham.controllers.Controller">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>
    <Button fx:id="oszExport" mnemonicParsing="false" onAction="#onOszExportClick" text="Begin export"/>
    <Separator orientation="VERTICAL" prefHeight="3.0" prefWidth="394.0" visible="false"/>
    <Label text="Hover the cursor on the options to see the description!"/>
    <GridPane prefHeight="120.0" prefWidth="396.0">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        </rowConstraints>
        <CheckBox fx:id="convertCheckbox" mnemonicParsing="false" text="Convert ogg to mp3"/>
        <CheckBox fx:id="filterPractice" mnemonicParsing="false" text="Filter practice maps" GridPane.rowIndex="1"/>
        <CheckBox fx:id="addTags" mnemonicParsing="false" onAction="#onAddTagChecked"
                  text="Apply mp3 tags and album art" GridPane.rowIndex="2"/>
        <CheckBox fx:id="overrideTags" mnemonicParsing="false" text="Override current mp3 tags" GridPane.columnIndex="1"
                  GridPane.rowIndex="2"/>
        <Label text="Renaming options" GridPane.rowIndex="3"/>
        <RadioButton fx:id="renameBeatmap" mnemonicParsing="false" selected="true" text="Rename after beatmap"
                     GridPane.rowIndex="4">
            <toggleGroup>
                <ToggleGroup fx:id="renameOptions"/>
            </toggleGroup>
        </RadioButton>
        <RadioButton fx:id="useBeatmapID" mnemonicParsing="false" text="Using beatmap ID (Deprecated)"
                     toggleGroup="$renameOptions" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
        <CheckBox fx:id="overwriteCheckbox" mnemonicParsing="false" text="Overwrite existing copy"
                  GridPane.columnIndex="1"/>
        <CheckBox fx:id="romajiNaming" mnemonicParsing="false" text="Romaji instead of Unicode" GridPane.columnIndex="1"
                  GridPane.rowIndex="3"/>
    </GridPane>
    <CheckBox fx:id="filterDuplicates" mnemonicParsing="false" onAction="#onFilterDuplicatesChecked"
              text="Filter duplicate songs if their length difference is less than "/>
    <TextField fx:id="filterSeconds" prefHeight="25.0" prefWidth="29.0"/>
    <Label text=" seconds"/>
</FlowPane>
